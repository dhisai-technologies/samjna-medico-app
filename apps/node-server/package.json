{
  "name": "node-server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon --exec \"node -r esbuild-register ./src/index.ts\" -e .ts",
    "build": "tsc && resolve-tspaths",
    "start": "node -r esbuild-register dist",
    "clean": "rm -rf dist && rm -rf node_modules",
    "db:generate": "drizzle-kit generate --config=src/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=src/drizzle.config.ts",
    "db:push": "pnpm db:generate && pnpm db:migrate",
    "db:studio": "drizzle-kit studio --config=src/drizzle.config.ts",
    "db:seed": "tsx src/db/seed"
  },
  "dependencies": {
    "@packages/database": "workspace:*",
    "@packages/broker": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.31.2",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.14",
    "pg": "^8.12.0",
    "socket.io": "^4.7.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tools/typescript-config": "workspace:*",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^8.11.6",
    "drizzle-kit": "^0.22.7",
    "esbuild": "^0.20.1",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "resolve-tspaths": "^0.8.19",
    "tsx": "^4.15.7",
    "typescript": "^5.3.3"
  }
}